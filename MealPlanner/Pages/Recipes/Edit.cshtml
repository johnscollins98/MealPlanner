@page "{recipeId:int?}"
@model MealPlanner.Pages.Recipes.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editting @Model.Recipe.Name</h2>
<form method="post">
    <input type="hidden" asp-for="Recipe.ID" />
    <div class="form-group">
        <label asp-for="Recipe.Name"></label>
        <input asp-for="Recipe.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Category"></label>
        <select asp-for="Recipe.Category" class="form-control" asp-items="Model.Categories"></select>
        <span class="text-danger" asp-validation-for="Recipe.Category" />
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Time"></label>
        <select asp-for="Recipe.Time" class="form-control" asp-items="Model.Times"></select>
        <span class="text-danger" asp-validation-for="Recipe.Time" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

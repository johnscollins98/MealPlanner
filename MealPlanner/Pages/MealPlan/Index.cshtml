@page
@using Shared
@model MealPlanner.Pages.MealPlan.IndexModel
@{
    ViewData["Title"] = "Meal Plan";
}

<h2>Meal Plan</h2>

<form method="post"><button name="submit" type="submit" class="btn btn-primary mt-2 mb-2">Regenerate Meal Plan</button></form>

<h3>🥣 Breakfasts</h3>
<div class="row align-items-stretch mb-2">
    @foreach (var recipe in Model.Breakfasts)
    {
        <div class="p-2 col-md-6 col-sm-12">
            @await Html.PartialAsync("../Shared/_RecipeCard", new RecipeCardModel { Recipe = recipe })
        </div>
    }
</div>



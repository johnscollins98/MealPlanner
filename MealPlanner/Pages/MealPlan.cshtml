@page
@model MealPlanner.Pages.Recipes.MealPlanModel
@{
    ViewData["Title"] = "Meal Plan";
}

<h2>Meal Plan</h2>

<h3>🥣 Breakfasts</h3>
<div class="row align-items-stretch mb-2">
    @foreach (var recipe in Model.MealPlan.Breakfasts)
    {
        <div class="p-2 col-md-6 col-sm-12">
            @await Html.PartialAsync("../Shared/_RecipeCard", recipe)
        </div>
    }
</div>


<h3>🥪 Lunches</h3>
<div class="row align-items-stretch mb-2">
    @foreach (var recipe in Model.MealPlan.Lunches)
    {
        <div class="p-2 col-md-6 col-sm-12">
            @await Html.PartialAsync("../Shared/_RecipeCard", recipe)
        </div>
    }
</div>

<h3>🍽️ Dinners</h3>
<div class="row align-items-stretch mb-2">
    @foreach (var recipe in Model.MealPlan.Dinners)
    {
        <div class="p-2 col-md-4 col-sm-12">
            @await Html.PartialAsync("../Shared/_RecipeCard", recipe)
        </div>
    }
</div>

<h3>🍫 Snacks</h3>
<div class="row align-items-stretch mb-2">
    @foreach (var recipe in Model.MealPlan.Snacks)
    {
        <div class="p-2 col-md-6 col-sm-12">
            @await Html.PartialAsync("../Shared/_RecipeCard", recipe)
        </div>
    }
</div>